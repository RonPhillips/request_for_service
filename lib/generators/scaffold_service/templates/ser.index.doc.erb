<h1>Listing roads</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Road number</th>
    <th>Major direction</th>
  </tr>

<% for road in @roads %>
  <tr>
    <td><%=h road.name %></td>
    <td><%=h road.road_number %></td>
    <td><%=h road.major_direction %></td>
  </tr>
<% end %>
</table>

